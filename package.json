{
  "name": "@sparkfabrik/capacitor-plugin-idfa",
  "version": "4.0.0",
  "description": "Get native IDFA or Advertising ID from iOS or Android device.",
  "main": "dist/plugin.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- autocorrect --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api IdfaPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "release": "release-it"
  },
  "author": "Sparkfabrik",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^4.3.0",
    "@capacitor/core": "^4.3.0",
    "@capacitor/docgen": "^0.0.10",
    "@capacitor/ios": "^4.3.0",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^1.0.1",
    "@ionic/swiftlint-config": "^1.1.2",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "eslint": "^7.11.0",
    "prettier": "~2.2.0",
    "prettier-plugin-java": "~1.0.0",
    "release-it": "^15.5.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.0",
    "swiftlint": "^1.0.1",
    "typescript": "~4.0.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^4.3.0"
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "SparkfabrikCapacitorPluginIdfa.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "idfa",
    "aaid",
    "advertising",
    "mobile"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sparkfabrik/capacitor-plugin-idfa"
  },
  "bugs": {
    "url": "https://github.com/sparkfabrik/capacitor-plugin-idfa/issues"
  }
}
